export const maxDuration = 60; // Allow up to 60s for processing PDFs
export const runtime = "nodejs"; // Ensure Node.js runtime for PDF parsing

import { NextResponse } from "next/server";
import { db } from "@/db";
import { papers, paperChunks } from "@/db/schema";
import { eq } from "drizzle-orm";
import { extractPdfText } from "@/lib/extract-pdf";
import { recursiveChunkText } from "@/lib/pdf-loader";
import { generateEmbeddings } from "@/lib/embed";
import { randomUUID } from "crypto";
import { redis, ensureRedis } from "@/lib/redis";

export async function POST(req: Request) {
  try {
    const formData = await req.formData();
    const file = formData.get("file") as File;

    if (!file) {
      return NextResponse.json({ error: "No file provided" }, { status: 400 });
    }

    if (file.type !== "application/pdf") {
      return NextResponse.json({ error: "File must be a PDF" }, { status: 400 });
    }

    // Check file size (10MB limit)
    const maxSize = 10 * 1024 * 1024; // 10MB
    if (file.size > maxSize) {
      return NextResponse.json(
        { error: "File size must be less than 10MB" },
        { status: 400 }
      );
    }

    // Generate unique ID for this PDF
    const pdfId = randomUUID();
    const fileName = file.name.replace(/\.pdf$/i, "");

    // Convert file to buffer
    const arrayBuffer = await file.arrayBuffer();
    const buffer = Buffer.from(arrayBuffer);

    // Store PDF - try Redis first, fallback to database
    const base64 = buffer.toString("base64");
    let storedInRedis = false;
    
    try {
      await ensureRedis();
      await redis.set(`pdf:${pdfId}`, base64);
      storedInRedis = true;
    } catch (error) {
      console.warn("[Upload API] Redis not available, storing PDF in database");
    }

    // Extract text from PDF
    console.log(`[Upload API] Extracting text from PDF: ${fileName}`);
    const fullText = await extractPdfText(buffer);
    console.log(`[Upload API] Extracted ${fullText.length} characters.`);

    if (fullText.length === 0) {
      return NextResponse.json(
        { error: "Could not extract text from PDF" },
        { status: 400 }
      );
    }

    // Check if a paper with the same content already exists (optional deduplication)
    // For now, we'll always create a new entry since it's user-uploaded

    // Save Paper Metadata (include PDF data if Redis is not available)
    await db.insert(papers).values({
      id: pdfId,
      title: fileName || "Untitled Document",
      pdfUrl: `/api/pdf/serve?pdfId=${pdfId}`, // Internal URL for serving
      abstract: fullText.substring(0, 500), // First 500 chars as abstract
      pdfData: storedInRedis ? null : base64, // Store in DB only if Redis unavailable
    });

    // Chunk the Text
    const chunks = recursiveChunkText(fullText, 1000, 200);
    console.log(`[Upload API] Created ${chunks.length} text chunks.`);

    // Generate Embeddings & Save Batches
    const BATCH_SIZE = 10;

    for (let i = 0; i < chunks.length; i += BATCH_SIZE) {
      const batchChunks = chunks.slice(i, i + BATCH_SIZE);

      // Generate embeddings for this batch
      const embeddings = await generateEmbeddings(batchChunks);

      // Prepare database rows
      const valuesToInsert = batchChunks.map((chunkText, idx) => ({
        paperId: pdfId,
        content: chunkText,
        embedding: embeddings[idx],
      }));

      // Insert batch
      await db.insert(paperChunks).values(valuesToInsert);
      console.log(`[Upload API] Saved batch ${Math.ceil((i + 1) / BATCH_SIZE)}/${Math.ceil(chunks.length / BATCH_SIZE)}`);
    }

    console.log(`[Upload API] Successfully processed PDF: ${pdfId}`);
    return NextResponse.json({
      success: true,
      pdfId: pdfId,
      chunks: chunks.length,
      title: fileName,
    });

  } catch (error: any) {
    console.error("[Upload API] Error:", error);
    return NextResponse.json(
      { error: error.message || "Internal Server Error" },
      { status: 500 }
    );
  }
}
